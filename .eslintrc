{
  "env": {
    "browser": true,
    "es6": true
  },

  "plugins": ["lit"],

  "extends": ["eslint:recommended", "plugin:import/errors", "google"],
  "rules": {
    "prefer-destructuring": ["error", {"object": true, "array": false}],
    "valid-jsdoc": ["error", { "prefer": {"return": "returns"} }]
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}
